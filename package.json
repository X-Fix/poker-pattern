{
    "name": "poker-pattern",
    "description": "The source code for the pattern library used when creating the poker-planning app",
    "version": "1.0.0",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/X-Fix/poker-pattern.git"
    },
    "scripts": {
        "build": "rollup -c",
        "cypress": "cypress open",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|json)\"",
        "lint": "eslint --ignore-path .gitignore .",
        "serve": "sirv public --single",
        "start": "rollup -c -w",
        "test": "jest",
        "test:watch": "jest --watch",
        "validate": "npm run lint && npm run format && npm run build && npm test"
    },
    "devDependencies": {
        "@types/jest": "^25.2.2",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-cypress": "^2.10.3",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-svelte3": "^2.7.3",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.2",
        "prettier": "^1.19.1",
        "prettier-plugin-svelte": "^0.7.0"
    },
    "dependencies": {
        "@babel/core": "^7.9.6",
        "@babel/preset-env": "^7.9.6",
        "@rollup/plugin-commonjs": "^11.1.0",
        "@rollup/plugin-node-resolve": "^7.1.3",
        "@testing-library/cypress": "^5.3.1",
        "autoprefixer": "^9.8.0",
        "babel-jest": "^25.5.1",
        "cssnano": "^4.1.10",
        "cypress": "^4.5.0",
        "jest": "^25.5.4",
        "postcss-advanced-variables": "^3.0.1",
        "postcss-import": "^12.0.1",
        "rollup": "^1.32.1",
        "rollup-plugin-livereload": "^1.3.0",
        "rollup-plugin-postcss": "^2.9.0",
        "rollup-plugin-svelte": "^5.2.2",
        "rollup-plugin-svg-sprite": "^1.0.0",
        "rollup-plugin-terser": "^5.3.0",
        "sirv-cli": "^0.4.4",
        "svelte": "^3.22.2"
    }
}
